<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/digitos"
        style="@style/digitost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botones"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <!-- FILA 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- BOTONES-->
            <Button
                android:id="@+id/btnc"
                android:text="C"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btn7"
                android:text="7"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn4"
                android:text="4"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn1"
                android:text="1"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btnac"
                android:text="AC"
                style="@style/Button1"/>

        </LinearLayout>

        <!-- FILA 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- BOTONES-->
            <Button
                android:id="@+id/doblecero"
                android:text="00"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btn8"
                android:text="8"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn5"
                android:text="5"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn2"
                android:text="2"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn0"
                android:text="0"
                style="@style/Button2"/>

        </LinearLayout>

        <!-- FILA 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- BOTONES-->
            <Button
                android:id="@+id/btnporcentaje"
                android:text="%"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btn9"
                android:text="9"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn6"
                android:text="6"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btn3"
                android:text="3"
                style="@style/Button2"/>

            <Button
                android:id="@+id/btnpunto"
                android:text="."
                style="@style/Button2"/>

        </LinearLayout>

        <!-- FILA 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- BOTONES-->
            <Button
                android:id="@+id/btndivision"
                android:text="รท"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btnmulti"
                android:text="X"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btnresta"
                android:text="-"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btnsuma"
                android:text="+"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btnigual"
                android:text="="
                style="@style/Button1"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>